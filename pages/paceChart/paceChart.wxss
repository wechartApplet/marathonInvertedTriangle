.summary {
    display: flex;
    justify-content: space-around;
}

.info-column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.info-value {
    font-size: 24px;
    margin-bottom: 5px;
    color: rgba(48, 226, 152);
}

.info-label {
    font-size: 14px;
    color: rgba(50, 50, 50);
}

/*公里配速表格数据样式*/
.pace-chart {
    display: flex;
    flex-direction: column;
    margin: 8% 0;
}

.pace-chart>view {
    display: flex;
}

.pace-chart>view>view:first-child {
    flex: 0.2;
    margin-left: 7%;
}

.pace-chart>view>view:last-child {
    flex: 0.8;
    margin-right: 7%;
}


.header {
    margin-bottom: 10px;
    color: rgba(179, 179, 179);
}

.dark {
    background-color: rgba(234, 251, 245);
    border-radius: 15px;
    display: flex;
}

.pace_row_tr {
    padding: 8px 0;
}

.dark>.pace-value {
    color: rgba(235, 255, 253);
    background-color: #2ecc71;
    background: linear-gradient(to right, rgb(107, 230, 178), #2ecc71, );
    padding: 5px 10px;
    border-radius: 15px;
    font-weight: bold;
}

/* 要与.pace-value保持一致 否则字体无法垂直居中 */
.dark>.pace-isfast {
    padding: 5px 10px;
}

.dark>text.pace-value_isfast {
    background-color: rgb(254, 146, 73);
    background: linear-gradient(to right, rgb(254, 146, 73), rgb(255, 76, 46), );
}

.pace-isfast {
    padding-left: 5%;
    color: rgba(254, 103, 58);
}

.pace-isfast_bg {
    background-color: rgb(255, 239, 239);
}


.time-details {
    display: flex;
    /* 允许内容换行 */
    flex-wrap: wrap;
    padding: 6px 0px;
}

.time-details>text {
    padding: 5px 0;
}


